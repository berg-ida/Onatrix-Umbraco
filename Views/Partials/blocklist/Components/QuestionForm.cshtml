@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.QuestionForm)Model.Content;
}

<section>
    <div class="max-w-7xl mx-auto px-4 flex flex-col gap-4 pt-6">
        <h2 class="text-[1.375rem] text-primary font-bold">@content.QuestionFormTitle</h2>
        <div class="flex flex-col gap-4">
            <div class="flex flex-row gap-4">
                <div class="bg-white border border-border w-1/2 rounded p-4">
                    <p class="text-body-light italic">@content.QuestionFormName</p>
                </div>
                <div class="bg-white border border-border w-1/2 rounded p-4">
                    <p class="text-body-light italic">@content.QuestionFormEmail</p>
                </div>
            </div>
            <div class="bg-white border border-border rounded p-4 pb-[10rem]">
                <p class="text-body-light italic">@content.QuestionFormQuestion</p>
            </div>
        </div>
        <div class="pb-[2.5rem]">
            <button type="submit" class="p-4 w-1/8 text-beige bg-primary text-center font-bold rounded-md cursor-pointer select-none">Submit</button>
        </div>
    </div>
</section>