@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactSection)Model.Content;

	var rootContent = Umbraco.ContentAtRoot();
	var siteSettings = rootContent.OfType<ContentModels.SiteSettings>().FirstOrDefault();
	var contactAdress = siteSettings?.ContactAdress?.ToString() ?? "Ingen adress angiven";
	var contactPhone = siteSettings?.ContactPhone?.ToString() ?? "Inget telefon-nummer angivet";
	var contactEmail = siteSettings?.ContactEmail?.ToString() ?? "Ingen e-post angiven";
}

<section class="bg-bg bg-no-repeat"
		style="background-image: url('/images/Contact-bg.svg');
			   background-position: 15%">
	<div class="flex flex-row gap-16 max-w-7xl mx-auto px-4 pt-[4rem]">
		<div class="w-1/2">
			@if (content.ContactImage != null)
			{
				<img src="@content.ContactImage.Url()" />
			}
		</div>
		<div class="flex flex-col justify-center gap-8">
			<h2 class="font-bold text-primary text-[2.5rem] w-2/3">@content.ContactTitle</h2>
			<div>
				<div class="flex flex-row gap-1">
					<i class="fa-solid fa-location-dot text-secondary"></i>
					<p class="font-semibold text-primary">@content.ContactLocation</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactAdress</p>
			</div>
			<div>
				<div class="flex flex-row gap-1">
					<i class="fa-solid fa-phone text-secondary"></i>
					<p class="font-semibold text-primary">@content.ContactPhone</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactPhone</p>
			</div>
			<div>
				<div class="flex flex-row gap-1">
					<i class="fa-solid fa-envelope text-secondary"></i>
					<p class="font-semibold text-primary">@content.ContactEmail</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactEmail</p>
			</div>
		</div>
	</div>
</section>