@using Onatrix.ViewModels
@model FormViewModel

@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "callbackForm" }))
{
	<div class="w-full flex flex-col gap-4">
		<div class="flex flex-row gap-4">
			<div class="bg-white border border-border w-1/2 rounded p-4">
				<label asp-for="Name" class="sr-only"></label>
				<input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="text-body-light italic focus:outline-none !w-full" />
				<span asp-validation-for="Name"></span>
			</div>
			<div class="bg-white border border-border w-1/2 rounded p-4">
				<label asp-for="Email" class="sr-only"></label>
				<input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" class="text-body-light italic focus:outline-none !w-full" />
				<span asp-validation-for="Email"></span>
			</div>
		</div>
		<div class="flex flex-row gap-4">
			<div class="bg-white border border-border w-1/2 rounded p-4">
				<label asp-for="Phone" class="sr-only"></label>
				<input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)" class="text-body-light italic focus:outline-none !w-full" />
				<span asp-validation-for="Phone"></span>
			</div>
			<div class="bg-white border border-border w-1/2 rounded p-4">
				<label asp-for="SelectedOption" class="sr-only"></label>
				<div class="relative">
					<select asp-for="SelectedOption" class="text-body-light italic appearance-none focus:outline-none !w-full">
						<option value="" disabled hidden selected>Please select an option</option>

						@foreach (var o in Model.Options)
						{
							<option value="@o">@o</option>
						}

					</select>
					<span class="pointer-events-none absolute right-1   inset-y-0 flex items-center">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-body-light" fill="none"
							 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
						</svg>
					</span>
				</div>
				
				<span asp-validation-for="SelectedOption"></span>
			</div>
		</div>
		<div class="pb-[2.5rem] flex justify-center">
			<button type="submit" class=" bg-primary text-white py-3 px-10 no-underline rounded cursor-pointer font-bold">Submit</button>
		</div>
	</div>
}